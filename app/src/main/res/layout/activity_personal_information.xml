<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rtv="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText">

    <include layout="@layout/layout_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/shape_personal_center_bg"
                android:elevation="3dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:contentDescription="header"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_user_header1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="13dp"
                    android:text="Passerby"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/layer_list_bottom_line1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingBottom="20dp"
                        android:paddingTop="15dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_today_record"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="今日战绩"
                                android:textColor="@color/app_status_bar_color"
                                android:textSize="20sp" />

                            <ImageView
                                android:id="@+id/iv_today_record"
                                android:layout_width="14dp"
                                android:layout_height="8dp"
                                android:layout_marginStart="15dp"
                                android:contentDescription="image"
                                android:src="@drawable/ic_red_arrow_bottom" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="21dp"
                            android:text="10单"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="完成单量"
                            android:textColor="@color/black2"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:paddingBottom="20dp"
                        android:paddingTop="15dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_this_month_record"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="本月战绩"
                                android:textColor="@color/black2"
                                android:textSize="20sp" />

                            <ImageView
                                android:id="@+id/iv_this_month_record"
                                android:layout_width="14dp"
                                android:layout_height="8dp"
                                android:layout_marginStart="15dp"
                                android:contentDescription="image"
                                android:src="@drawable/ic_red_arrow_bottom"
                                android:visibility="gone" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="21dp"
                            android:text="10m"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="完成单量"
                            android:textColor="@color/black2"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:text="单日最好成绩: 暂未生成个人战报"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/layer_list_bottom_line1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="12dp"
                    android:text="查看排行榜"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/shape_personal_center_bg"
                android:elevation="3dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/layer_list_bottom_line1"
                    android:orientation="horizontal"
                    android:paddingBottom="13dp">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_customer_reviews"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="顾客评价"
                                android:textColor="@color/app_status_bar_color"
                                android:textSize="20sp" />

                            <ImageView
                                android:id="@+id/iv_customer_reviews"
                                android:layout_width="14dp"
                                android:layout_height="8dp"
                                android:layout_marginStart="15dp"
                                android:contentDescription="image"
                                android:src="@drawable/ic_red_arrow_bottom" />
                        </LinearLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tv_business_reviews"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="商家评价"
                                android:textColor="@color/black2"
                                android:textSize="20sp" />

                            <ImageView
                                android:id="@+id/iv_business_reviews"
                                android:layout_width="14dp"
                                android:layout_height="8dp"
                                android:layout_marginStart="15dp"
                                android:contentDescription="image"
                                android:src="@drawable/ic_red_arrow_bottom"
                                android:visibility="gone"/>
                        </LinearLayout>
                    </FrameLayout>

                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="15dp">

                    <TextView
                        android:id="@+id/tv_all_reviews"
                        android:layout_width="94dp"
                        android:layout_height="36dp"
                        android:background="@drawable/shape_round_rectangle_18dp_colorb73432"
                        android:gravity="center"
                        android:text="全部(0)"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_satisfaction_reviews"
                        android:layout_width="94dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_round_rectangle_18dp"
                        android:gravity="center"
                        android:text="满意(0)"
                        android:textColor="@color/black2"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_discontent_reviews"
                        android:layout_width="94dp"
                        android:layout_height="36dp"
                        android:layout_gravity="end"
                        android:background="@drawable/shape_round_rectangle_18dp"
                        android:gravity="center"
                        android:text="不满意(0)"
                        android:textColor="@color/black2"
                        android:textSize="15sp" />
                </FrameLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="25dp"
                    android:overScrollMode="never" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>